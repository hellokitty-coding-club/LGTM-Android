<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.LGTMAndroid" parent="Theme.Material3.Light.NoActionBar">
        <!--color-->
        <item name="colorPrimary">@color/green</item>
        <!--status bar-->
        <item name="android:statusBarColor">@color/gray_3</item>
        <item name="android:windowLightStatusBar">true</item>
        <!--font-->
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/black</item>
        <!--etc-->
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="bottomSheetDialogTheme">@style/LgtmBottomSheetStyle</item>
        <item name="editTextStyle">@style/LGTMEditTextStyle</item>
        <item name="android:dropDownListViewStyle">@style/SpinnerStyle</item>
        <item name="chipCornerRadius">100dp</item>
    </style>

    <style name="LgtmBottomSheetStyle" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/LGTMModalStyle</item>
    </style>

    <style name="LGTMModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/rectangle_bottom_sheet</item>
    </style>

    <style name="LGTMButton" parent="Theme.AppCompat">
        <item name="android:textAlignment">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingVertical">14dp</item>
        <item name="android:layout_marginHorizontal">20dp</item>
        <item name="android:layout_marginBottom">28dp</item>
        <item name="android:textAppearance">@style/Body1M</item>
    </style>

    <style name="LGTMButtonLight" parent="LGTMButton">
        <item name="android:background">@drawable/selector_lgtm_button_light_background</item>
        <item name="android:textColor">@color/selector_if_enabled_black_gray_4</item>
    </style>

    <style name="LGTMButtonDark" parent="LGTMButton">
        <item name="android:background">@drawable/selector_lgtm_button_dark_background</item>
        <item name="android:textColor">@color/selector_if_enabled_gray_6_gray_4</item>
    </style>


    <style name="LGTMEditTextStyle" parent="@style/Widget.AppCompat.EditText">
        <item name="colorControlActivated">?attr/colorPrimary</item>
        <item name="colorControlNormal">?attr/colorPrimary</item>
        <item name="colorControlHighlight">?attr/colorPrimary</item>
        <item name="android:textAppearance">@style/Body1B</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHighlight">?attr/colorPrimary</item>
        <item name="colorAccent">?attr/colorPrimary</item>
        <item name="android:textColorHint">@color/gray_3</item>
        <item name="android:paddingVertical">16dp</item>
        <item name="android:background">@drawable/rectangle_white_stroke_gray_3_radius_10</item>
        <item name="android:textCursorDrawable">@drawable/rectangle_primary_cursor</item>
    </style>

    <style name="SpinnerStyle" parent="Widget.AppCompat.ListView.DropDown">
        <item name="android:divider">@color/gray_2</item>
        <item name="android:dividerHeight">1dp</item>
    </style>

    <style name="App.Custom.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/black</item>
    </style>

</resources>